<% layout('layout') -%>

<div class="wrapper game">

  <div class="game-stats-nav">

    <h3 class="game-letter-h3">Letter: <span class="game-letter-span"></span> </h3>
    
    <h3 class="game-timer-h3">Timer: <span class="game-timer-span">75</span> </h3>
    
    <h3>Round: 1</h3>

  </div>

  <button class="game-timer-btn light-btn">Start timer</button>

  <form action="/marking-page">
    <!-- These will be generated by the category js later on -->
    <div class="input-label-group">
      <label for="" class="label">Animal</label>
      <input type="text" class="input" name="animalAns" data-id="<%= user_id %>" autocomplete="off">
    </div>
  
    <div class="input-label-group">
      <label for="" class="label">Country</label>
      <input type="text" class="input" name="countryAns" data-id="<%= user_id %>" autocomplete="off">
    </div>
  
    <div class="input-label-group">
      <label for="" class="label">Movie</label>
      <input type="text" class="input" name="movieAns" data-id="<%= user_id %>" autocomplete="off">
    </div>
  
    <div class="input-label-group">
      <label for="" class="label">Types of dogs</label>
      <input type="text" class="input" name="dogAns" data-id="<%= user_id %>" autocomplete="off">
    </div>
  
    <div class="input-label-group">
      <label for="" class="label">Food</label>
      <input type="text" class="input" name="foodAns" data-id="<%= user_id %>" autocomplete="off">
    </div>
  
    <button class="game-fun-btn dark-btn">wow (Owen Wilson Voice)</button>
  </form>

</div>

<script src="js/game.js"></script>
