<% layout('layout') -%>

<style>
body {
    background-color: lightgrey;
    text-align: center;
}


.gridwrap {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
}


.create {
    border: 1px solid black;
}

.join {
    border: 1px solid black;
}

.settings {
    border: 1px solid black;
    text-align: center;
}

</style>

    <div class="bodywrapper">
        <div class="gridwrap">
            <div class="create">
                <h2>Create Game</h2>
                <form method="get" action="/host">
                    <div class="input-label-group">
                        <label for="">Game Name:</label>
                        <input name="gameName" type="text"> 
                    </div>
                    <div class="input-label-group">
                        <label for="">Host name:</label>
                        <input name="displayName" type="text"> 
                    </div>
                    <button>Create Game</button>
                </form>
            </div>


        <!-- quick fix add in join specific game off code before asking for display name -->

            <div class="join">
                <h2>quick fix for adding player to table</h2>
                <form method="get" action="/join-game">
                    <label for="">Display Name:</label>
                    <input name="displayName" type="text">
                    <button>Join Game</button>
                </form>
            </div>


            <div class="settings">
                <h2>Settings</h2>
            </div>
        </div>
    </div>

<script src="./js/index.js"></script>

