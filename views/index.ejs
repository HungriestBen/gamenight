<% layout('layout') -%>

<style>
body {
    background-color: lightgrey;
    text-align: center;
}


.gridwrap {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
}


.create {
    border: 1px solid black;
}

.join {
    border: 1px solid black;
}

.settings {
    border: 1px solid black;
    text.align: center;
}

</style>

    <div class="bodywrapper">
        <h1>Game Night</h1>
        <div class="gridwrap">
            <div class="create">
                <h2>Create Game</h2>
                <form action="creategame">
                <label for="">Game Name:</label>
                <input type="text">
                <button>Create Game</button>
                </form>
            </div>

            <div class="join">
            <h2>Join Game</h2>
                <form action="creategame">
                <label for="">Game Name:</label>
                <input type="text">
                <button>Join Game</button>
            </div>
            <div class="settings">
                <h2>Settings</h2>
            </div>
        </div>
    </div>

