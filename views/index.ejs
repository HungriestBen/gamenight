<link rel="stylesheet" href="index.css">
<% layout('layout') -%>

    <div class="index-bodywrapper">
        <div class="index-gridwrap">
            <div class="index-create">
                <h2>Create Game</h2>
                <form method="get" action="/create-game">
                    <div class="index-input-label-group">
                        <label for="">Game Name:</label>
                        <input name="gameName" type="text"> 
                    </div>
                    <div class="index-input-label-group">
                        <label for="">Host name</label>
                        <input name="displayName" type="text"> 
                    </div>
                    <button class="index-dark-btn">Create Game</button>
                </form>
            </div>


        <!-- quick fix add in join specific game off code before asking for display name -->

            <div class="index-join">
                <h2>Join Game</h2>
                <form method="get" action="/join-game">
                    <div class="index-input-label-group">
                        <label for="">Display Name:</label>
                        <input name="displayName" type="text">
                    </div>
                    <div class="index-input-label-group">
                        <label for="">Game Name:</label>
                        <input name="gameName" type="text">
                    </div>
                    <button class="index-light-btn">Join Game</button>
                </form>
            </div>


            <div class="index-settings">
                <h2>Settings</h2>
            </div>
        </div>
    </div>

<script src="./js/index.js"></script>

